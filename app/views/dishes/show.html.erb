<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @dish %>

    <strong class="block mb-1">Ingredients</strong>
    <ul class="divide-y  shadow-lg" data-dish-form-target="ingredientsList" >
      <%=render partial: 'dishes/ingredient', collection: @ingredients%>
    </ul>
    <% if  user_signed_in? && (current_user.role == 'admin' || current_user.id == @dish.user_id)%>

    <%= link_to 'Edit this dish', edit_dish_path(@dish), class: "mt-2 rounded-lg py-3 px-5 bg-blue-100 text-blue-500 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= link_to "Delete this dish", dish_path(@dish), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: "mt-2 rounded-lg py-3 px-5 bg-red-50 text-red-500 font-medium" %>
    </div>
    <% end %>
    <%= link_to 'Back to dishes', dishes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
