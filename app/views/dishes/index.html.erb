<div class="w-full" data-controller="hello" >
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Dishes</h1>
    <% if  user_signed_in? %>
      <%= link_to 'New dish', new_dish_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="dishes" class="min-w-full">
    <%= render @dishes %>
  </div>
</div>
